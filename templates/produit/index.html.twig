{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
        <h1>{{ 'produit.titre'|trans}}</h1>
        {% if produits is not empty %}
            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'produit.nom'|trans }}</th>
                    <th>{{ 'produit.image'|trans }}</th>
                    <th>{{ 'produit.quantitie'|trans }}</th>
                    <th>{{ 'produit.prix'|trans }}</th>
                    <th>{{ 'produit.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.nom }}</td>
                        {% if produit.photo is not null %}
                            <td><img style="max-width:250px " src="{{ asset('/uploads/'~produit.photo) }}"></td>
                            {% else %}
                            <td>Il n'y a pas de PHOTOS</td>
                        {% endif %}
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.prix}}â‚¬</td>
                        <td><a class="btn btn-primary" href="{{ path('modifproduit',{'id':produit.id}) }}">Modifier</a>
                        <a class="btn btn-primary" href="{{ path('paniermodif',{'id':produit.id} )}}">Ajouter au panier</a>
                        </td>
                    </tr>
                {%  endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Il n'y a aucun produit</p>
        {% endif %}
        <h3>Ajout produit</h3>
        {{ form(form_ajout) }}


{% endblock %}
